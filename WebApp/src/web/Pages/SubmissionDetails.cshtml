@page
@using logic.Models
@model web.Pages.SubmissionDetails

<h1>Details</h1>

<div>
    <h4>Submission @Model.Attempt.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Task:
        </dt>
        <dd class="col-sm-10">
            <a asp-page="./TaskDetails" asp-route-id="@Model.Attempt.TaskId">@Model.HwTask.Name</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attempt.SubmissionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attempt.SubmissionDate)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attempt.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attempt.Grade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attempt.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attempt.Link)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attempt.Output)
        </dt>
        <dd class="col-sm-10">
            <span style="white-space: pre-line">@Model.Attempt.Output</span>
        </dd>
    </dl>
    <form asp-action="" method="post" asp-route-id="@Model.Attempt.Id">
        <input type="hidden" asp-for="Attempt.Id" />
        <input type="hidden" asp-for="Attempt.Output" />
        <input type="hidden" asp-for="Attempt.Link" />
        <input type="hidden" asp-for="Attempt.SubmissionDate" />
        <input type="hidden" asp-for="Attempt.TaskId" />
        <div class="form-group">
            <label asp-for="Attempt.Grade" class="control-label"></label>
            <input asp-for="Attempt.Grade" class="form-control" />
            <span asp-validation-for="Attempt.Grade" class="text-danger"></span>
        </div>
        <div class="row mb-3 mx-auto">
                        <button class="btn btn-primary btn-lg" type="submit">
                                Change
                        </button>
        </div>
    </form>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Comments</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Comment c in Model.Comments) {
            <tr>
                <td>@c.Content</td>
            </tr>
        }
        </tbody>
    </table>
    
    <form asp-action="" method="post" asp-route-id="@Model.Attempt.Id">
        <input type="hidden" asp-for="Attempt.Id" />
        <input type="hidden" asp-for="Attempt.Output" />
        <input type="hidden" asp-for="Attempt.Link" />
        <input type="hidden" asp-for="Attempt.Grade" />
        <input type="hidden" asp-for="Attempt.SubmissionDate" />
        <input type="hidden" asp-for="Attempt.TaskId" />
        
        <div class="row mb-3">
            <span asp-validation-for="Comment.Content" class="text-danger"></span>
            <label class="col-sm-3 col-form-label col-form-label-lg"
                   asp-for="Comment.Content">Add comment</label>
            <div class="col-sm-4">
                @Html.TextAreaFor(model => model.Comment.Content, new { rows = "6", cols = "80", @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3 mx-auto">
            <div class="col text-center">
                <button class="btn btn-primary btn-lg" type="submit">
                    Add
                </button>
            </div>
        </div>
    </form>
        
</div>
